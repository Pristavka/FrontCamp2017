extends layout

block content
  h1(style='font-size:3em;color:#6dc3d2;text-align:center') #{title}
  form(
    method='POST',
    action='/users/login'
    )
    #form-group   
      label Username: 
      input.form-control(
        name='username',
        type='text'
        )
    #form-group   
      label Password: 
      input.form-control(
        name='password',
        type='password'
        )
    br
    input.btn.btn-primary(
      type='submit',
      value='Submit'
      )