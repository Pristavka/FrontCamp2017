doctype html
html
  head
    title #{title}
    link(rel='stylesheet' href='/styles/bootstrap.css')
  body(style='max-width:550px;margin:0 auto')
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.rounded
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExample10', aria-controls='navbarsExample10', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExample10.collapse.navbar-collapse.justify-content-md-center
        ul.navbar-nav
          li.nav-item
            a.nav-link(href='/')
              | Best Blogs 
              span.sr-only (current)
          li.nav-item
            a.nav-link(href='/blogs') Blogs
          li.nav-item
            a.nav-link(href='/blogs/add') Add blog
    != messages('message', locals)
    if errors
      each error, i in errors
        div(class="alert alert-danger") #{error.msg}
    block content
